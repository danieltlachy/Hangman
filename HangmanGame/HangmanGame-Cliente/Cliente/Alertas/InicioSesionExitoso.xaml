<Window x:Class="HangmanGame_Cliente.Cliente.Alertas.InicioSesionExitoso"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HangmanGame_Cliente.Cliente.Alertas"
      WindowStyle="None"
      ResizeMode="NoResize"
      SizeToContent="WidthAndHeight"
      WindowStartupLocation="CenterOwner"
      Background="Transparent"
      AllowsTransparency="True"
      ShowInTaskbar="False"
      Topmost="True">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="400">
            <Image Source="/Cliente/Recursos/allGoodAlert.png" Stretch="Fill" />
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock x:Name="txtBlkTituloInicioSesionExitoso1" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="50" Foreground="White" TextAlignment="Center" Text="{DynamicResource txtBlkTituloInicioSesionExitoso1}" />
                <TextBlock x:Name="txtBlkTituloInicioSesionExitoso2" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="50" Foreground="White" TextAlignment="Center" Margin="0,-10,0,20" Text="{DynamicResource txtBlkTituloInicioSesionExitoso2}" />
                <TextBlock x:Name="txtBlkMensajeInicioSesionExitoso1" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30" Foreground="White" TextAlignment="Center" Text="{DynamicResource txtBlkMensajeInicioSesionExitoso1}" />
                <TextBlock x:Name="txtBlkMensajeInicioSesionExitoso2" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30" Foreground="White" TextAlignment="Center" Margin="0,0,0,30" Text="{DynamicResource txtBlkMensajeInicioSesionExitoso2}" />
                <Button x:Name="btnAceptarInicioSesionExitoso" Content="{DynamicResource btnAceptarInicioSesionExitoso}" Width="120" Height="40" FontSize="25" FontFamily="pack://application:,,,/Font/#MedievalSharp" Foreground="White" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Center" Cursor="Hand" Click="Aceptar_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
