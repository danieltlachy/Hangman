<Page x:Class="HangmanGame_Cliente.Cliente.Vistas.FormularioUsuario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HangmanGame_Cliente.Cliente.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="FormularioUsuario">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Cliente/Recursos/defaultBackground.png"/>
        </Grid.Background>
        <Label x:Name="lblTituloFormularioPerfil" Content="{DynamicResource lblTituloFormularioPerfil}" HorizontalAlignment="Left" Margin="410,25,0,0" VerticalAlignment="Top" Height="80" Width="527" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="60" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <Label Content="e.j. Daniel Mongeote Tlachy" HorizontalAlignment="Left" Margin="754,234,0,0" VerticalAlignment="Top" Foreground="#FF00FF6D" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="28" Width="360"/>
        <Label x:Name="lblNickname" Content="{DynamicResource lblNickname}" HorizontalAlignment="Left" Margin="165,120,0,0" VerticalAlignment="Top" Height="52" Width="356" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Margin="91,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="35" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" TextChanged="txtUsuarioChanged">
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/textboxBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="e.j. DoomFist96" HorizontalAlignment="Left" Margin="238,234,0,0" VerticalAlignment="Top" Foreground="#FF00FF6D" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="28" Width="210"/>
        <Label x:Name="lblNombreCompleto" Content="{DynamicResource lblNombreCompleto}" HorizontalAlignment="Left" Margin="756,120,0,0" VerticalAlignment="Top" Height="52" Width="356" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="txtNombreCompleto" HorizontalAlignment="Left" Margin="682,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="35" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" TextChanged="txtNombreCompletoChanged">
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/textboxBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="e.j. 01-01-1999" HorizontalAlignment="Left" Margin="240,390,0,0" VerticalAlignment="Top" Foreground="#FF00FF6D" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="28" Width="206"/>
        <Label x:Name="lblFechaNacimiento" Content="{DynamicResource lblFechaNacimiento}" HorizontalAlignment="Left" Margin="130,284,0,0" VerticalAlignment="Top" Height="52" Width="426" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="txtFechaNacimiento" HorizontalAlignment="Left" Margin="91,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="35" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" TextChanged="txtFechaNacimientoChanged">
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/textboxBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="e.j. 2288336699" HorizontalAlignment="Left" Margin="819,390,0,0" VerticalAlignment="Top" Foreground="#FF00FF6D" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="28" Width="230"/>
        <Label x:Name="lblTelefono" Content="{DynamicResource lblTelefono}" HorizontalAlignment="Left" Margin="721,284,0,0" VerticalAlignment="Top" Height="52" Width="426" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="txtTelefono" HorizontalAlignment="Left" Margin="682,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="35" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" TextChanged="txtTelefonoChanged" >
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/textboxBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="e.j. hogwarths@gmail.com" HorizontalAlignment="Left" Margin="172,547,0,0" VerticalAlignment="Top" Foreground="#FF00FF6D" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="28" Width="343"/>
        <Label x:Name="lblCorreoFormulario" Content="{DynamicResource lblCorreoFormulario}" HorizontalAlignment="Left" Margin="130,435,0,0" VerticalAlignment="Top" Height="52" Width="426" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="txtCorreo" HorizontalAlignment="Left" Margin="91,509,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="36" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" TextChanged="txtCorreoChanged">
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/textboxBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="e.j. HangmanUser17@" HorizontalAlignment="Left" Margin="844,547,0,0" VerticalAlignment="Top" Foreground="#FF00FF6D" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="28" Width="282"/>
        <Label x:Name="lblContraseniaFormulario" Content="{DynamicResource lblContraseniaFormulario}" HorizontalAlignment="Left" Margin="721,435,0,0" VerticalAlignment="Top" Height="52" Width="426" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <PasswordBox x:Name="psBContrasenia" HorizontalAlignment="Left" Margin="684,509,0,0" VerticalAlignment="Top" Width="500" SelectionBrush="{x:Null}" FontFamily="pack://application:,,,/Font/#MedievalSharp" Foreground="White" BorderBrush="{x:Null}" FontSize="30" Height="36" MaxLength="20" PasswordChar="*" RenderTransformOrigin="0.5,0.5">
            <PasswordBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.779"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.32"/>
                </TransformGroup>
            </PasswordBox.RenderTransform>
            <PasswordBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/textboxBackground.png"/>
            </PasswordBox.Background>
        </PasswordBox>
        <Button x:Name="btnGuardarUsuario" Content="{DynamicResource btnGuardarUsuario}" HorizontalAlignment="Left" Margin="552,604,0,0" VerticalAlignment="Top" Width="182" Height="66" FontFamily="pack://application:,,,/Font/#MedievalSharp"  FontSize="40" Foreground="Black" BorderBrush="{x:Null}" Click="btnGuardarUsuario_Click"  >
            <Button.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnRegresar" Content="Button" HorizontalAlignment="Left" Margin="51,23,0,0" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="82" Width="156" Click="btnRegresar_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/backBackground.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
